        <div class="nav-links">
            <% if (locals.teacher) { %>
                <% if (locals.teacher.role === 'admin') { %>
                    <a href="/admin/dashboard">Admin Dashboard</a>
                    <a href="/admin/create-lecture">Create Lecture</a>
